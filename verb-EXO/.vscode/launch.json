    "version": "0.2.0",
    "configurations": [
        {
            "name": "PowerShell: Launch Current File",
            "type": "PowerShell",
            "request": "launch",
            "script": "${file}",
            "cwd": "${file}"
        },
        {
            "type": "PowerShell",
            "request": "launch",
            "name": "PS connect-exo2",
            "script": "connect-exo2",
            "args": [
                "-verbose"
            ],
            "cwd": "${workspaceRoot}"
        }
    ]
}